<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping> 
    <class name="com.sblog.beans.PostTag" table="t_post_tag"> 
        <id name="id" column="PT_ID" type="string" length="36"></id> 
        <property name="postId" column="POST_ID" type="string" length="36"></property>
        <property name="tagId" column="TAG_ID" type="string" length="36"></property>
        <property name="createTime" column="CreateTime" type="timestamp"></property>
        <property name="updateTime" column="UpdateTime" type="timestamp"></property>
    </class>
</hibernate-mapping>